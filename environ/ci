set -e -o pipefail

counter=0

function stage {
  ((counter++)) || true
  printf "\n\033[34;1mâž¡  $1  \033[90m[stage $counter] [running ${SECONDS}s]\033[0m\n\n"
}


export GO111MODULE=on

stage "Download Go Dependencies"
go mod download

stage "Run Go Tests"
go test -coverprofile coverage.txt -v ./...
